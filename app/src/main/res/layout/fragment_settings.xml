<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/settings_title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:gravity="center"
        android:textSize="25sp"
        android:text="Insert Game Title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/darker_gray"/>

    <include
        android:id="@+id/num_games_selection"
        layout="@layout/list_item_setting" />

    <include
        android:id="@+id/game_time_selection"
        layout="@layout/list_item_setting" />

    <include
        android:id="@+id/game_delay_selection"
        layout="@layout/list_item_setting" />

    <include
        android:id="@+id/target_time_selection"
        layout="@layout/list_item_setting" />


    <Button
        android:id="@+id/synchronous_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:layout_margin="10dp"
        android:text="@string/standard_status" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>


    <Button
        android:id="@+id/start_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="25sp"
        android:text="@string/start_prompt" />


</LinearLayout>