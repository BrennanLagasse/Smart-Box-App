<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/game_over"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:gravity="center"
        android:textSize="40sp"
        android:text="@string/game_over" />

    <TextView
        android:id="@+id/next_game_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:gravity="center"
        android:textSize="50sp"
        android:text="" />

    <TextView
        android:id="@+id/next_game_time_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20sp"
        android:gravity="center"
        android:textSize="25sp"
        android:text="@string/next_game_timer" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/darker_gray"/>

    <include
        android:id="@+id/room_one_scores"
        layout="@layout/list_item_result"/>

    <include
        android:id="@+id/room_two_scores"
        layout="@layout/list_item_result"/>

    <include
        android:id="@+id/room_three_scores"
        layout="@layout/list_item_result"/>

    <include
        android:id="@+id/room_four_scores"
        layout="@layout/list_item_result"/>
</LinearLayout>