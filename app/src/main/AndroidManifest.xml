<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="android.thesoccerbox.smartbox" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartBox" >
        <activity
            android:name=".ResultsActivity"
            android:exported="false" />
        <activity
            android:name=".ResultsActivity.java"
            android:exported="false" />
        <activity android:name=".ConnectionErrorActivity" />
        <activity android:name=".LiveGameActivity" />
        <activity android:name=".GameSettingsActivity" />
        <activity android:name=".GameListActivity" />
        <activity android:name=".GameTypeActivity" />
        <activity android:name=".BoxActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>